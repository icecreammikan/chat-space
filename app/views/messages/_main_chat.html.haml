.chat-main
  .main_header
    .main_header__left-box
      .main_header__left-box__current-group 
        = @group.name
      .main_header__left-box__member-list 
        - @users.each do |user|
          %span=user.name
    .edit-btn
      = link_to edit_group_path(@group) do
        Edit

  .messages
    = render @messages
  

  .form
    = form_for [@group, @message] do |f|
      .input-box__text
        = f.text_field :text, placeholder: 'type a message'
      .input-box__image
        = f.label :image, class:'icon' do
          = icon('fas', 'image', class: 'image-icon')
          = f.file_field :image, class: 'hidden'
      .send-btn
        = f.submit 'Send', class: 'form__submit', id:'form_send'
